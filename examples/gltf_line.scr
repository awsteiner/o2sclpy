# This example demonstrates various options for materials and the
# associated latex or colormap texture files
o2graph -set td_wdir gltf \
-xlimits 0 1 -ylimits 0 1 -zlimits 0 1 \
-td-mat grad 1 1 1 "txt=cmap:viridis,prefix=line_" \
-td-mat white 1 1 1 \
-td-mat red 1 0 0 \
-td-pgram 0.71 0.5 0.5 0.71 0.8 0.5 0.71 0.5 0.8 "mat=grad" \
-td-line 0.1 0.2 0.3 0.9 0.8 0.7 "mat=grad" \
-td-line 0.1 0.2 0.9 0.9 0.8 0.7 "mat=white" \
-td-line 0.1 0.9 0.3 0.9 0.8 0.7 "mat=red" \
-gltf line.gltf
